<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App_drawer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- colorPrimary: 주요 브랜딩 색상 -->
        <!-- colorSecondary: 두번째 브랜딩 색상 -->
        <!-- colorOn[Primary, Secondary, Surface etc]: 각 이름들의 색상에 대비되는 색상 -->
        <!-- color[Primary, Secondary]Variant: 각 이름들의 색상의 그림자 -->
        <!-- colorSurface: 컴포넌트(카드, 시트, 메뉴 등)의 표면 색상 -->
        <!-- colorBackground: 스크린의 백그라운드 -->
        <!-- colorPrimarySurface: 라이트 테마에서는 colorPrimary이고, 다크테마에서는 colorSurface를 나타내는 색상 -->
        <!-- colorError: 에러를 표시하기 위한 색상 -->
        <!-- colorControlNormal: 아이콘 및 컨트롤의 보통 상태에 적용되는 색상 -->
        <!-- colorControlActivated: 아이콘/컨트롤이 활성화 상태일 때(예를 들어 체크박스가 체크되었을 때) 적용되는 색상 -->
        <!-- colorControlHighlight: 컨트롤을 강조할 때 적용되는 색상(예를 들어 리플, 리스트에서 선택된 것) -->
        <!-- textColorPrimary: 가장 눈에 띄어야 할 텍스트 색상 -->
        <!-- textColorSecondary: 두번째 텍스트 색상 -->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_main_color</item>
        <item name="colorPrimaryLow1">@color/light_main_color_low_1</item>
        <item name="colorPrimaryLow2">@color/light_main_color_low_2</item>
        <item name="colorPrimaryHigh1">@color/light_main_color_high_1</item>
        <item name="colorPrimaryHigh2">@color/light_main_color_high_2</item>
        <item name="colorOnPrimary">@color/light_main_color_on</item>
        <item name="colorPrimaryVariant">@color/light_main_color_variant</item>
        <item name="colorPrimarySurface">@color/light_main_color_on</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_secondary_color</item>
        <item name="colorSecondaryLow1">@color/light_secondary_color_low_1</item>
        <item name="colorSecondaryLow2">@color/light_secondary_color_low_2</item>
        <item name="colorSecondaryHigh1">@color/light_secondary_color_high_1</item>
        <item name="colorSecondaryHigh2">@color/light_secondary_color_high_2</item>
        <item name="colorOnSecondary">@color/light_secondary_color_on</item>
        <item name="colorSecondaryVariant">@color/light_secondary_color_variant</item>

        <!-- Specific color -->
        <item name="colorTitle">@color/light_color_title</item>
        <item name="colorSubTitle">@color/light_color_sub_title</item>
        <item name="colorNotificationTitleBg">@color/light_color_notification_title_bg</item>
        <item name="colorNotificationIndexBg">@color/light_color_notification_index_bg</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <!-- default color 주입 -->
        <item name="android:colorBackground">@color/light_main_color_on</item>
        <item name="android:textColor">@color/light_main_color</item>
        <item name="android:fontFamily" tools:targetApi="o">@font/pretendard_regular</item>

    </style>

</resources>