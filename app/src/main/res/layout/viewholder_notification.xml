<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="model"
            type="com.example.app_drawer.vo.NotificationInfoVo" />
    </data>

    <LinearLayout
        android:id="@+id/app_notification_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <!--        <TextView-->
        <!--            android:id="@+id/app_notification_type"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="@{model.type.label}"-->
        <!--            android:textColor="?attr/colorOnPrimary"-->
        <!--            android:textSize="15sp" />-->

        <TextView
            android:id="@+id/app_notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="@{model.title}"
            android:textColor="?attr/colorText"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/app_notification_create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="@{model.createDate}"
            android:textColor="?attr/colorText"
            android:textSize="11sp" />

    </LinearLayout>
</layout>
