<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/component_toolbar"
            layout="@layout/component_toolbar"
            app:layout_constraintBottom_toTopOf="@id/linearlayout_main_activity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/linearlayout_main_activity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/component_toolbar">

            <include
                android:id="@+id/component_notification"
                layout="@layout/component_notification" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/component_topic"
                        layout="@layout/component_topic" />

                    <include
                        android:id="@+id/component_topic_recent"
                        layout="@layout/component_topic_app" />

                    <include
                        android:id="@+id/component_topic_often"
                        layout="@layout/component_topic_app" />

                    <include
                        android:id="@+id/component_topic_unused"
                        layout="@layout/component_topic_app" />

                    <include
                        android:id="@+id/component_topic_installed"
                        layout="@layout/component_topic_app" />

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
